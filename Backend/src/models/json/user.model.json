{
  "table": "users",
  "columns": {
    "id": {
      "type": "INTEGER",
      "primary_key": true,
      "nullable": false
    },
    "username": {
      "type": "VARCHAR",
      "length": 30,
      "nullable": false
    },
    "email": {
      "type": "VARCHAR",
      "length": 100,
      "nullable": false,
      "unique": true,
      "indexed": true
    },
    "password_hash": {
      "type": "VARCHAR",
      "nullable": false
    },
    "is_active": {
      "type": "BOOLEAN",
      "default": true
    },
    "is_verified": {
      "type": "BOOLEAN",
      "default": false
    },
    "is_admin": {
      "type": "BOOLEAN",
      "default": false,
      "indexed": true
    },
    "created_at": {
      "type": "TIMESTAMP",
      "default": "utcnow"
    },
    "updated_at": {
      "type": "TIMESTAMP",
      "default": "utcnow",
      "on_update": "utcnow"
    },
    "last_login_at": {
      "type": "TIMESTAMP",
      "nullable": true
    },
    "password_changed_at": {
      "type": "TIMESTAMP",
      "nullable": true
    },
    "user_metadata": {
      "type": "JSON",
      "default": {}
    }
  }
}
